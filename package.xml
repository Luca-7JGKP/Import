<?xml version="1.0" encoding="UTF-8"?>
<package name="com.lucaberwind.wcf.calendar.import" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/6.0/package.xsd">
    <packageinformation>
        <packagename>Kalender iCal Import</packagename>
        <packagename language="en">Calendar iCal Import</packagename>
        <packagedescription>Importiert Kalender-Events aus iCal-Dateien mit erweiterter Gelesen/Ungelesen-Logik.</packagedescription>
        <packagedescription language="en">Imports calendar events from iCal files with extended read/unread logic.</packagedescription>
        <version>1.2.1</version>
        <date>2025-12-31</date>
    </packageinformation>
    
    <authorinformation>
        <author>Luca Berwind</author>
    </authorinformation>
    
    <requiredpackages>
        <requiredpackage minversion="5.4.22">com.woltlab.wcf</requiredpackage>
    </requiredpackages>
    
    <instructions type="install">
        <instruction type="language">xml/language.xml</instruction>
        <instruction type="language">xml/language_de_informal.xml</instruction>
        <instruction type="eventListener">xml/eventListener.xml</instruction>
        <instruction type="option">xml/option.xml</instruction>
        <instruction type="acpMenu">xml/acpMenu.xml</instruction>
        <instruction type="page">xml/page.xml</instruction>
        <instruction type="sql">install.sql</instruction>
        <instruction type="file">files.tar</instruction>
        <instruction type="acpTemplate">acptemplates.tar</instruction>
    </instructions>
    
    <instructions type="update" fromversion="*">
        <instruction type="file">files.tar</instruction>
        <instruction type="acpTemplate">acptemplates.tar</instruction>
        <instruction type="eventListener">xml/eventListener.xml</instruction>
        <instruction type="option">xml/option.xml</instruction>
        <instruction type="acpMenu">xml/acpMenu.xml</instruction>
        <instruction type="language">xml/language.xml</instruction>
        <instruction type="language">xml/language_de_informal.xml</instruction>
        <instruction type="page">xml/page.xml</instruction>
    </instructions>
    
    <instructions type="uninstall">
        <instruction type="sql">uninstall.sql</instruction>
    </instructions>
</package>