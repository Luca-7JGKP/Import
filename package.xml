<?xml version="1.0" encoding="UTF-8"?>
<package name="com.lucaberwind.wcf.calendar.import" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/6.0/package.xsd">
    <packageinformation>
        <packagename>Kalender iCal Import</packagename>
        <packagename language="en">Calendar iCal Import</packagename>
        <packagedescription>Importiert Kalender-Events aus iCal-Dateien vollautomatisch ohne manuelle Konfiguration. Alle Einstellungen werden aus calendar1_event_import gelesen.</packagedescription>
        <packagedescription language="en">Imports calendar events from iCal files fully automatically without manual configuration. All settings are read from calendar1_event_import.</packagedescription>
        <version>4.1.0</version>
        <date>2026-01-07</date>
    </packageinformation>
    
    <authorinformation>
        <author>Luca Berwind</author>
    </authorinformation>
    
    <requiredpackages>
        <requiredpackage minversion="6.1.0">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="6.1.0">com.woltlab.calendar</requiredpackage>
    </requiredpackages>
    
    <instructions type="install">
        <instruction type="sql">install.sql</instruction>
        <instruction type="file">files.tar</instruction>
        <instruction type="acpTemplate">acptemplates.tar</instruction>
        <instruction type="language">language/*.xml</instruction>
        <instruction type="eventListener">eventListener.xml</instruction>
        <instruction type="acpMenu">acpMenu.xml</instruction>
        <instruction type="cronjob">cronjob.xml</instruction>
    </instructions>
    
    <instructions type="update" fromversion="1.*">
        <instruction type="sql">install.sql</instruction>
