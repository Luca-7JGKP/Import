<?xml version="1.0" encoding="UTF-8"?>
<package name="com.lucaberwind.wcf.calendar.import" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/vortex/package.xsd">
    <packageinformation>
        <packagename>Luca Kalender Import Plugin</packagename>
        <packagedescription>Import-Plugin für Woltlab mit iCal-Unterstützung, automatischer Thread-Erstellung und intelligenter Gelesen/Ungelesen-Verwaltung basierend auf Event-Datum und Updates.</packagedescription>
        <packagedescription language="en">Import plugin for Woltlab with iCal support, automatic thread creation, and intelligent read/unread management based on event dates and updates.</packagedescription>
        <version>1.2.3</version>
        <date>2025-12-31</date>
    </packageinformation>
    
    <authorinformation>
        <author>Luca Berwind</author>
        <authorurl>https://lucaberwind.com</authorurl>
    </authorinformation>
    
    <requiredpackages>
        <requiredpackage minversion="6.0.0">com.woltlab.wcf</requiredpackage>
        <requiredpackage minversion="6.0.0">com.woltlab.calendar</requiredpackage>
        <requiredpackage minversion="6.0.0">com.woltlab.wbb</requiredpackage>
    </requiredpackages>
    
    <excludedpackages>
        <!-- Keine ausgeschlossenen Pakete -->
    </excludedpackages>
    
    <instructions type="install">
        <!-- SPRACHE ZUERST! -->
        <instruction type="language">xml/language.xml</instruction>
        <instruction type="language">xml/language_de_informal.xml</instruction>
        
        <!-- Event-Listener -->
        <instruction type="eventListener">xml/eventListener.xml</instruction>
        
        <!-- Optionen (benötigen Language-Keys) -->
        <instruction type="option">xml/option.xml</instruction>
        
        <!-- Admin-Menü -->
        <instruction type="acpMenu">xml/acpMenu.xml</instruction>
        
        <!-- Debug-Seite -->
        <instruction type="page">xml/page.xml</instruction>
        
        <!-- Datenbank-Schema -->
        <instruction type="sql">install.sql</instruction>
        
        <!-- Dateien -->
        <instruction type="file">files.tar</instruction>
        <instruction type="acpTemplate">acptemplates.tar</instruction>
    </instructions>
    
    <instructions type="update" fromversion="*">
        <!-- Bei Updates -->
        <instruction type="file" />
        <instruction type="acpTemplate" />
        <instruction type="eventListener">xml/eventListener.xml</instruction>
        <instruction type="option">xml/option.xml</instruction>
        <instruction type="acpMenu">xml/acpMenu.xml</instruction>
        <instruction type="language">xml/language.xml</instruction>
        <instruction type="page">xml/page.xml</instruction>
    </instructions>
    
    <instructions type="uninstall">
        <!-- Beim Deinstallieren SQL ausführen -->
        <instruction type="sql">uninstall.sql</instruction>
    </instructions>
</package>
